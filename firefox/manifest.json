{
  "name": "Spica DevOps Timestamp generator",
  "description": "Generate a timestamp for DevOps descriptions.",
  "version": "1.0",
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": ["storage"],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/imgs/spica16.png",
      "32": "/imgs/spica32.png",
      "48": "/imgs/spica48.png",
      "128": "/imgs/spica128.png"
    }
  },
  "icons": {
    "16": "/imgs/spica16.png",
    "32": "/imgs/spica32.png",
    "48": "/imgs/spica48.png",
    "128": "/imgs/spica128.png"
  },
  "options_ui": {
    "page": "options.html",
    "browser_style": true
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "addon@example.com",
      "strict_min_version": "42.0"
    }
  }
}
